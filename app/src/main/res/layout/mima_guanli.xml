<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include layout="@layout/mima_actionbar"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/jiasuomima"
        >
        <ImageView
            android:id="@+id/mima_jiasuo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/one"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="枷锁密码"
            android:textSize="20sp"
            android:textColor="#1a1919"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mima_jiasuo"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/zhifumima"
        >
        <ImageView
            android:id="@+id/mima_zhifu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/one"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付密码"
            android:textSize="20sp"
            android:textColor="#1a1919"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mima_zhifu"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/denglumima"
        >

        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imageView" />

        <ImageView
            android:id="@+id/mima_denglu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/one"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆密码"
            android:textSize="20sp"
            android:textColor="#1a1919"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mima_denglu"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bangdingshouji"
        >
        <ImageView
            android:id="@+id/mima_bangding"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/one"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机修改"
            android:textSize="20sp"
            android:textColor="#1a1919"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mima_bangding"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
</LinearLayout>
